            </intent-filter>
        </activity>
        <activity android:name="com.example.toeholdTalk.Fragment.ChatListFragment" />
        <activity android:name="com.example.toeholdTalk.Fragment.FriendListFragment" />
        <activity android:name="com.example.toeholdTalk.Activity.MainActivity" />

